# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_public_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_secret_key

# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=My-ERP-Plan

# Payment Configuration (Choose one: Stripe or GHL)
# STRIPE (If using Stripe - uncomment and add your keys)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
# STRIPE_SECRET_KEY=sk_test_your_key_here
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# GHL (If using GoHighLevel - uncomment and add your keys)
# GHL_API_KEY=your_ghl_api_key_here
# GHL_LOCATION_ID=your_ghl_location_id_here

# Email Configuration (Optional - not needed if using GHL)
# SENDGRID_API_KEY=your_sendgrid_api_key
# FROM_EMAIL=noreply@my-erp-plan.com

# Deployment
NODE_ENV=development
